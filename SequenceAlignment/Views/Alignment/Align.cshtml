@model SequenceAlignment.ViewModels.SequenceViewModel

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>

<form asp-controller="Alignment" asp-action="Index" name="AlignmentForm" enctype="multipart/form-data" ng-app="">

    <label>
        First Sequence:
        <textarea asp-for="FirstSequence" name="FirstSequence" ng-model="FirstSequence"></textarea>
    </label>
    <label ng-show="FirstSequence.length == undefined || FirstSequence.length == 0 ">
        OR upload file: <input type="file" name="FirstFile" />
    </label>
    <hr />
    <label>
        Second Sequence:
        <textarea asp-for="SecondSequence" name="SecondSequence" ng-model="SecondSequence"></textarea>
    </label>
    <label ng-show="SecondSequence.length == undefined || SecondSequence.length == 0 ">
        OR upload file: <input type="file" name="SecondFile"  />
    </label>
    <hr />
    <label>
        Algorithm:
        <select asp-for="Algorithm">
            <option value="NeedlemanWunsch" selected> Needleman Wunsch </option>
            <option value="ParallelNeedlemanWunsch"> Paralle Needleman Wunsch</option>
        </select>
    </label>
    <hr />
    <label>
        Score Matrix:
        <select asp-for="ScoringMatrix">
            <option value="Identity" selected> Identity </option>
            <option value="BLOSUM50"> BLOSUM50 </option>
        </select>
    </label>
    <hr />
    <label>
        Gap <input type="number" asp-for="Gap" value="-8" />
    </label>
    <hr />
    <label>
        Gap Open Penalty <input type="number" asp-for="GapOpenPenalty" value="-2" />
    </label>
    <hr />
    <label>
        Gap Extension Penalty <input type="number" asp-for="GapExtensionPenalty" value="-2" />
    </label>
    <hr />

    <input type="submit" value="Align" />

</form>

