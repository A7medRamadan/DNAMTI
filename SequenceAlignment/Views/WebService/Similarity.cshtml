<link href="~/css/System-Status.css" rel="stylesheet" />
<style>
    body {
        text-align: unset;
    }
</style>
<div class="bg-gray padding-50">
    <div class="container" id="system-status">
        <h1 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><strong>Similarity </strong></h1>
        <div class="system-status">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <h2 class="text-uppercase">How to use</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>URL </td>
                                    <td><i class="glyphicon glyphicon-link"></i>http://mtidna.azurewebsites.net/api/webservice/Similarity/SequenceA/SequenceB</td>
                                </tr>
                                <tr>
                                    <td>Method Type</td>
                                    <td><i class="glyphicon glyphicon-send"></i>POST</td>
                                </tr>
                                <tr>
                                    <td>SequenceA </td>
                                    <td><i class="glyphicon glyphicon-text-background"></i>The first sequence of similarity.</td>
                                </tr>
                                <tr>
                                    <td>SequenceB </td>
                                    <td><i class="glyphicon glyphicon-text-background"></i> The second sequence of similarity.</td>
                                </tr>
                                <tr>
                                    <td>Return </td>
                                    <td><i class="glyphicon glyphicon-arrow-down"></i> The Percentage of the similarity of the two sequences.</td>
                                </tr>
                                <tr>
                                    <td>Example </td>
                                    <td><i class="glyphicon glyphicon-check"></i> http://mtidna.azurewebsites.net/api/webservice/similarity/TGAACFDAAT/TGTTGFDAAT </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>