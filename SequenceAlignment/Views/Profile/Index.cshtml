@model IEnumerable<SequenceAlignment.Models.Sequence>


<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>

<div class="container" ng-app="">
    <div class="form-group pull-left">
        <input type="text" class="search form-control" placeholder="What you looking for?" />
    </div><span class="counter pull-right"></span>
    <table class="table table-hover table-bordered results">
        <thead>
            <tr>
                <th class="col-md-3 col-xs-3 text-center" >ID</th>
                <th class="col-md-2 col-xs-2 text-center">First Sequence</th>
                <th class="col-md-2 col-xs-2 text-center">Second Sequence</th>
                <th class="col-md-1 col-xs-1 text-center">Submitted Date</th>
                <th class="col-md-2 col-xs-2 text-center">Actions</th>
            </tr>
            <tr class="warning no-result" ng-show="@Model.Count() == 0">
                <td colspan="4"><i class="fa fa-warning"></i>No result</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Seq in Model)
            {
                <tr>
                    <td class="col-md-2 col-xs-1">@Seq.AlignmentID</td>
                    <td class="col-md-2 col-xs-1">@Seq.FirstSequenceName</td>
                    <td class="col-md-2 col-xs-1">@Seq.SecondSequenceName</td>
                    <td class="col-md-2 col-xs-1">@Seq.SubmittedDate</td>
                    <td class="col-md-2 col-xs-1">
                        @if (Seq.ByteText == null)
                        {
                            <span> Alignment is undergoing... </span>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-controller="Profile" asp-action="DownloadFile" asp-route-AlignmentID="@Seq.AlignmentID">Download</a>
                            <a class="btn btn-danger" asp-controller="Profile" asp-action="DeleteFile" asp-route-AlignmentID="@Seq.AlignmentID">Remove</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
