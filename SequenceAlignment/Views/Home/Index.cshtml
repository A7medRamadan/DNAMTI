@{
    ViewData["Title"] = "Home Page";
}
    <div class="carousel slide" data-ride="carousel" id="carousel-1">
        <div class="carousel-inner" role="listbox">
            <div class="item">
                <img src="~/images/DNA.jpg" alt="Slide Image" />
                <h1 class="visible-lg-inline hidden-xs hidden-sm hidden-md" style="position:absolute;top:85%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:700;background:rgba(0, 0, 0, 0.5);">Sequence Alignment</h1>
                <h1 class="visible-md-block hidden-xs hidden-sm hidden-lg" style="position:absolute;top:85%;left:17%;transform:translate(-50%,-50%);height:12%;width:35%;color:white;font-weight:500;background:rgba(0, 0, 0, 0.5);">Sequence Alignment</h1>
            </div>
            <div class="item">
                <img src="~/images/CloudComputing.jpg" alt="Slide Image" />
                <h1 class="visible-md-block hidden-xs hidden-sm hidden-lg" style="position:absolute;top:85%;left:17%;transform:translate(-50%,-50%);height:12%;width:35%;color:white;font-weight:500;background:rgba(0, 0, 0, 0.5);">Cloud Computing</h1>
                <h1 class="visible-lg-inline hidden-xs hidden-sm hidden-md" style="position:absolute;top:85%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:700;background:rgba(0, 0, 0, 0.5);">Cloud Computing</h1>
            </div>
            <div class="item active">
                <img src="~/images/WebAPI.png" alt="Slide Image" />
                <h1 class="visible-md-block hidden-xs hidden-sm hidden-lg" style="position:absolute;top:85%;left:17%;transform:translate(-50%,-50%);height:12%;width:35%;color:white;font-weight:500;background:rgba(0, 0, 0, 0.5);">Web Service </h1>
                <h1 class="visible-lg-inline hidden-xs hidden-sm hidden-md" style="position:absolute;top:85%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:700;background:rgba(0, 0, 0, 0.5);">Web Service</h1>
            </div>
        </div>
        <div>
            <a class="left carousel-control" href="#carousel-1" role="button" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i><span class="sr-only">Previous</span></a>
            <a class="right carousel-control" href="#carousel-1" role="button" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i><span class="sr-only">Next</span></a>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#carousel-1" data-slide-to="0"></li>
            <li data-target="#carousel-1" data-slide-to="1"></li>
            <li data-target="#carousel-1" data-slide-to="2" class="active"></li>
        </ol>
    </div>
    <div class="features-boxed">
        <div class="container">
            <div class="intro">
                <h1 class="text-center">Features </h1>
                <p class="lead text-center"><strong>We Are Proud To Introduce You, The Most Useful Tools For Sequence Processing</strong></p>
            </div>
            <div class="row features">
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-align-left icon"></i>
                        <h3 class="name">Simple Alignment</h3>
                        <p class="description"><strong>Align Two Sequences </strong></p><a asp-action="Align" asp-controller="Alignment" class="learn-more"><strong>Align Now</strong></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-cloud icon"></i>
                        <h3 class="name">Cloud Alignment</h3>
                        <p class="description"><strong>Align Long Sequences</strong></p><a asp-action="Grid" asp-controller="Alignment"  class="learn-more"><strong>Align Now</strong></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-filter icon"></i>
                        <h3 class="name">Clean Sequence</h3>
                        <p class="description"><strong> Clean DNA Sequence&#39;s Noise</strong> </p><a asp-action="Clean" asp-controller="Service"  class="learn-more"><strong>Clean Now</strong></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-scissors icon"></i>
                        <h3 class="name">Split Sequence</h3>
                        <p class="description"><strong>Split long sequence into small blocks </strong></p><a asp-action="Splitter" asp-controller="Service"  class="learn-more"><strong>Split Now</strong></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-duplicate icon"></i>
                        <h3 class="name">Similarity </h3>
                        <p class="description"><strong>Get the Similarity between two Sequences</strong></p><a asp-action="Similarity" asp-controller="Service" class="learn-more"><strong>Check Now</strong></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 item">
                    <div class="box">
                        <i class="glyphicon glyphicon-random icon"></i>
                        <h3 class="name">Generate Sequence</h3>
                        <p class="description"><strong>Generate Random Two Sequences</strong></p><a asp-action="Generate" asp-controller="Service" class="learn-more"><strong>Generate Now</strong></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

