@{
    ViewData["Title"] = "Home Page";
}

<div class="carousel slide" data-ride="carousel" id="carousel-1">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/DNA.jpg"  alt="Slide Image"/>
            <h1 style="position:absolute;top:90%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:600;background:rgba(0, 0, 0, 0.5);">Sequence Alignment</h1>
        </div>
        <div class="item">
            <img src="~/images/CloudComputing.jpg" alt="Slide Image"/>
            <h1 style="position:absolute;top:90%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:600;background:rgba(0, 0, 0, 0.5);">Cloud Computing</h1>
        </div>
        <div class="item">
            <img src="~/images/WebAPI.png"  alt="Slide Image"/>
            <h1 style="position:absolute;top:90%;left:15%;transform:translate(-50%,-50%);height:12%;width:30%;color:white;font-weight:600;background:rgba(0, 0, 0, 0.5);">Web Service API</h1>
        </div>
    </div>
    <div>
        <a class="left carousel-control" href="#carousel-1" role="button" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i><span class="sr-only">Previous</span></a>
        <a class="right carousel-control" href="#carousel-1" role="button" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i><span class="sr-only">Next</span></a>
    </div>
    <ol class="carousel-indicators">
        <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-1" data-slide-to="1"></li>
        <li data-target="#carousel-1" data-slide-to="2"></li>
    </ol>
</div>
<div class="features-boxed">
    <div class="container">
        <div class="intro">
            <h1 class="text-center">Features </h1>
            <p class="lead text-center"><strong>We Are Proud To Introduce You, The Most Useful Tools For Sequence Processing</strong></p>
        </div>
        <div class="row features">
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-align-left icon"></i>
                    <h3 class="name">Simple Alignment</h3>
                    <p class="description"><strong>Align two sequence </strong></p><a href="#" class="learn-more"><strong>Aligan Now</strong></a>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-cloud icon"></i>
                    <h3 class="name">Grid Alignment</h3>
                    <p class="description"><strong>Align Large Lenght of Sequence</strong></p><a href="#" class="learn-more"><strong>Align Now</strong></a>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-remove-circle icon"></i>
                    <h3 class="name">Clean Sequence</h3>
                    <p class="description"><strong>Removing any Wrong Formats</strong></p><a href="#" class="learn-more"><strong>Clean Now</strong></a>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-scissors icon"></i>
                    <h3 class="name">Split Sequence</h3>
                    <p class="description"><strong>Split your sequence into blocks </strong></p><a href="#" class="learn-more"><strong>Split Now</strong></a>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-duplicate icon"></i>
                    <h3 class="name">Similarity </h3>
                    <p class="description"><strong>Get theSimiilarity between two Sequences</strong></p><a href="#" class="learn-more"><strong>Check Now</strong></a>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 item">
                <div class="box">
                    <i class="glyphicon glyphicon-random icon"></i>
                    <h3 class="name">Generate Sequence</h3>
                    <p class="description"><strong>Generate Random Sequences </strong></p><a href="#" class="learn-more"><strong>Generate Now</strong></a>
                </div>
            </div>
        </div>
    </div>
</div>