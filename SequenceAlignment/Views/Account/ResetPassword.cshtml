@model SequenceAlignment.ViewModels.ResetPasswordViewModel

<link href="~/css/AlignSimple.css" rel="stylesheet" />

<div class="contact-clean">
    <form method="post" asp-controller="Account" asp-action="RestPassword">
        <input type="text" hidden readonly name="UserId" asp-for="UserId" />
        <input type="text" hidden readonly name="CodeToken" asp-for="CodeToken" />

        <h2 class="text-center">Reset Password</h2>
        <div class="form-group has-success">
            <label style="font-size:15px;">Enter Your new Password</label>
            <input type="password" placeholder="Enters the new password"  class="form-control" asp-for="Password" />
        </div>
        <div class="form-group has-success">
            <label style="font-size:15px;">Repeat Your new Password</label>
            <input type="password"  placeholder="Re-enters the new password" class="form-control" asp-for="RetypePassword"  />
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button class="btn btn-primary btn-block" type="submit"> Reset </button>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </form>
</div>