@model SequenceAlignment.ViewModels.LoginViewModel
<link href="~/css/LoginStyles.min.css" rel="stylesheet" />
<div class="login-clean">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="glyphicon glyphicon-log-in"></i></div>
        <div class="form-group">
            <input class="form-control" type="email" name="email" placeholder="Email" asp-for="Email">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password">
        </div>
        <div class="checkbox form-group">
                <pre>Remember Me   <input type="checkbox" asp-for="RememberMe">  </pre>               
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg" type="submit">Log In</button>
        </div>
    </form>
</div>
