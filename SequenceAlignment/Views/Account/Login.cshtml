@model SequenceAlignment.ViewModels.LoginViewModel
<link href="~/css/Login.css" rel="stylesheet" />
<style>
    body {
        text-align: unset;
    }
</style>

<div class="login-clean">
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="glyphicon glyphicon-log-in"></i></div>
        <div class="form-group">
            <label style="font-size:15px;">Enter Your Email</label>
            <input class="form-control" type="email" placeholder="Email" asp-for="Email">
        </div>
        <div class="form-group">
            <label style="font-size:15px;">Enter Your Password</label>
            <input class="form-control" type="password" placeholder="Password" asp-for="Password">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" asp-for="RememberMe">Remember Me
            </label>
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg" type="submit">Log In</button>
        </div>
        <p>Don't have an account? <a asp-action="Signup" asp-controller="Account">Sign-up </a></p>

        <div class="form-group">
            <p>Forgot your password? <a asp-action="ForgetPassword" asp-controller="Account"> Reset </a></p>
        </div>
    </form>
</div>


