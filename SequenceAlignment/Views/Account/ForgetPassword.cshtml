<link href="~/css/AlignSimple.css" rel="stylesheet" />

<div class="contact-clean">
    <form method="post" asp-action="ForgetPassword" asp-controller="Account">
        <h2 class="text-center">Forget Password</h2>
        <div class="form-group">
            <label style="font-size:15px;">Your Email Account</label>
            <input type="email" name="Email" placeholder="Email" class="form-control" />
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button class="btn btn-primary btn-block" type="submit">Get Password</button>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </form>
</div>