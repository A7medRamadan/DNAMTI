@model SequenceAlignment.ViewModels.GenerateSequenceViewModel

<style>
    body {
        text-align: unset;
    }
</style>
<link href="~/css/AlignSimple.css" rel="stylesheet" />
<div class="contact-clean">
    <form method="post" asp-controller="Service" asp-action="Generate">
        <h1 class="text-center">Generate </h1>
        <div class="form-group">
            <label style="font-size:15px;">Enter Length </label>
            <input class="form-control" type="number" inputmode="numeric" placeholder="Sequence Length" asp-for="SequenceLength" required min="10" max="40000">
        </div>
        <div class="form-group">
            <label style="font-size:15px;">Select Sequence Type</label>
            <select class="form-control" asp-for="Alphabet">
                <option value="DNA" selected>DNA</option>
                <option value="RNA">RNA</option>
                <option value="Protein">Protein</option>
            </select>
        </div>
        <div class="form-group">
            <label style="font-size:15px;">Enter Consecutive Match Number</label>
            <input class="form-control" asp-for="ConsecutiveMatch" type="number" inputmode="numeric" placeholder="Consecutive Match Length">
        </div>
        <div class="form-group">
            <label style="font-size:15px;">Select Consecutive Match Position</label>
            <select class="form-control" asp-for="Position">
                <option value="L">Left</option>
                <option value="R">Right</option>
                <option value="M" selected="">Middle</option>
            </select>
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button class="btn btn-primary btn-block" type="submit">Generate</button>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </form>
</div>